<h1>Top page</h1>
<%= link_to '新規投稿', '/posts/new' %>
<% @posts.each do |post| %>
  <div class="post">
    <div class="post-date">
      投稿日時: <%= post.created_at %>
    </div>
    <div class="post-content">
       <%= post.content.body %>
      <% post.content.embeds.each do |blob| %>
        <% if blob.image? %>
          <%= image_tag blob %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>  